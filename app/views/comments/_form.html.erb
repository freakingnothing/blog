<%= form_with(model: [ @post, @post.comments.build ], local: true) do |f| %>
  <div class='form-group'>
    <div class='form-group'>
      <%= f.text_area :body, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.submit "Save", class: 'btn btn-block btn-success' %>
  </div>
<% end %>
