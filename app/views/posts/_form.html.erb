<%= form_with(model: @post, local: true) do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |t| %>
      <div class='checkbox'>
        <%= t.label do %>
          <%= t.check_box + t.text %>
        <% end %>
      </div>
    <% end %>
  </div>
  <% if @post.published? %>
    <div class='form-group'>
      <%= f.submit 'Update', class: 'btn btn-block btn-success' %>
      <%= f.submit 'Un-publish', class: 'btn btn-block btn-success' %>
    </div>
  <% else %>
    <div class='form-group'>
      <%= f.submit 'Publish', class: 'btn btn-block btn-success' %>
      <%= f.submit 'Save as draft', class: 'btn btn-block btn-default' %>
    </div>
  <% end %>
<% end %>
